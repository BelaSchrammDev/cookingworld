{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="align-self-stretch d-flex flex-column align-items-center">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Du bist eingeloggt als
					{{ app.user.userIdentifier }},
					<a role="button" class="d-flex button-green" href="{{ path('app_logout') }}">Ausloggen</a>
				</div>
			{% else %}
				<div class="mb_3">
					<h3 class="h3 mb-3 font-weight-normal">Bitte anmelden</h3>
					<a role="button" class="d-flex button-green" href="{{ path('app_register') }}">Noch kein Account? Hier registrieren!</a>
				</div>
			{% endif %}

			<label for="username">Benutzername</label>
			<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
			<label for="password">Passwort</label>
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
			{# See https://symfony.com/doc/current/security/remember_me.html #}

			<div class="d-flex align-items-center mb-3">
				<input class="me-3" type="checkbox" name="_remember_me" id="_remember_me">
				<label for="_remember_me">Angemeldet bleiben</label>
			</div>

			<button class="button-green align-self-end" type="submit">
				Anmelden
			</button>
		</form>
	</div>
{% endblock %}
